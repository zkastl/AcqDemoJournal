<Window x:Class="AcqDemoJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AcqDemoJournal.View"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"  Background="#FF444444"
        Title="AcqDemo Journal" Height="768" Width="1024">
    <TabControl Background="Transparent"
                TabStripPlacement="Left"                
                 FontFamily="Calibri"
                 FontSize="24"
                Margin="0"
                BorderThickness="0">
        <TabItem Header="Entries"
                 Width="150"
                 Height="75">
            <views:AddJournalEntryView />
        </TabItem>
        <TabItem Header="Review"
                 Width="150"
                 Height="75">
            <views:ReviewEntriesView />
        </TabItem>
    </TabControl>
</Window>
